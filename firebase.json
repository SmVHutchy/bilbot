{
  "hosting": {
    "public": "frontend",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {"source": "/api/**", "run": {"serviceId": "bilbot-api", "region": "europe-west3"}},
      {"source": "**", "destination": "/index.html"}
    ]
  }
}
